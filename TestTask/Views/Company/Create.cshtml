@model TestTask.Models.Company
@{
    ViewData["Title"] = "Новая Компания";
}
<h2>Новая Компания</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Company" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name">Наименование</label><br />
            <input asp-for="Name" class="form-control" required"/>
        </div>
        <div class="form-group">
            <label asp-for="OrganizationalLegalForm">Организационно-правовая форма</label><br />
            <input asp-for="OrganizationalLegalForm" class="form-control" required pattern="^[a-zA-Z]+$"/>
        </div>
        <div>
            <button type="submit" class="btn btn-primary mt-1">Добавить</button>
            <a class="btn btn-primary mt-1" asp-controller="Company" asp-action="Index">Отмена</a>
        </div>
    </div>
</form>